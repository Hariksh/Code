n=int(input())
for i in range(1,n+1):
    for j in range(0,n-i):
        print(" ",end=" ")  
    for j in range(0,i):
        print(j+1,end=" ")
    for j in range(i-1,0,-1):
        print(j,end=" ")
    print("")    
for i in range(1,n): 
    for j in range(0,i):
        print(2*" ",end="")
    for j in range(0,(n-i)):
        print(j+1,end=" ")
    for j in range(n-i-1,0,-1):
        print(j,end=" ")
    print("")
